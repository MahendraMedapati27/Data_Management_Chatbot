<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified"/>
    </handlers>
    <httpPlatform processPath="D:\home\Python39\python.exe"
                  arguments="D:\home\site\wwwroot\run.py"
                  stdoutLogEnabled="true"
                  stdoutLogFile="D:\home\LogFiles\python.log"
                  startupTimeLimit="60"
                  startupRetryCount="3"
                  requestTimeout="00:04:00">
      <environmentVariables>
        <environmentVariable name="FLASK_ENV" value="production" />
        <environmentVariable name="FLASK_DEBUG" value="false" />
        <environmentVariable name="FLASK_HOST" value="0.0.0.0" />
        <environmentVariable name="FLASK_PORT" value="8000" />
        <environmentVariable name="PYTHONPATH" value="D:\home\site\wwwroot" />
      </environmentVariables>
    </httpPlatform>
    <rewrite>
      <rules>
        <rule name="StaticFiles" stopProcessing="true">
          <match url="^(static/.*)$" />
          <action type="Rewrite" url="{R:1}" />
        </rule>
        <rule name="Python" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="run.py" />
        </rule>
      </rules>
    </rewrite>
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>
  </system.webServer>
</configuration>
