# Azure SQL Database Configuration Template
# Copy this to .env file and update with your actual values

# ------------------------------------------------------------------------
# AZURE SQL DATABASE CONFIGURATION (REQUIRED)
# ------------------------------------------------------------------------
SQL_SERVER=chatbotsql2121.database.windows.net
SQL_DATABASE=your-database-name
SQL_USERNAME=your-username@chatbotsql2121
SQL_PASSWORD=your-password
REQUIRE_AZURE_DB=true

# Database Connection Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=1800
DB_POOL_TIMEOUT=30
DB_LOGIN_TIMEOUT=15
DB_QUERY_TIMEOUT=30
DB_TDS_VERSION=7.4
DB_CHARSET=utf8
DB_CONNECT_RETRIES=3

# ------------------------------------------------------------------------
# OTHER REQUIRED SETTINGS
# ------------------------------------------------------------------------
SECRET_KEY=your-secret-key-change-in-production-12345
SECURITY_PASSWORD_SALT=your-security-salt-change-in-production-67890
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Optional Services
GROQ_API_KEY=your-groq-api-key-here
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
